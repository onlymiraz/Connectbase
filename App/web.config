<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Keep your existing handler definition -->
      <add name="FlaskHandler"
           path="*"
           verb="*"
           modules="FastCgiModule"
           scriptProcessor="D:\Scripts\WebApp\env\Scripts\python.exe|D:\Scripts\WebApp\env\Lib\site-packages\wfastcgi.py"
           resourceType="Unspecified"
           requireAccess="Script" />
    </handlers>
    <!-- NEW: fastCgi config to prevent timeout at 5 mins -->
    <fastCgi>
      <application
          fullPath="D:\Scripts\WebApp\env\Scripts\python.exe"
          arguments="D:\Scripts\WebApp\env\Lib\site-packages\wfastcgi.py"
          maxInstances="4"
          idleTimeout="00:20:00"
          activityTimeout="00:30:00"
          requestTimeout="00:30:00"
          instanceMaxRequests="10000">
        <environmentVariables>
          <!-- Matches your existing WSGI_HANDLER and PYTHONPATH -->
          <environmentVariable name="WSGI_HANDLER" value="app.app" />
          <environmentVariable name="PYTHONPATH" value="D:\Scripts\WebApp" />
          <!-- Optional extra environment variable to clarify server software -->
          <environmentVariable name="SERVER_SOFTWARE" value="Microsoft-IIS/10.0" />
        </environmentVariables>
      </application>
    </fastCgi>
  </system.webServer>
  <appSettings>
    <!-- Your existing keys -->
    <add key="WSGI_HANDLER" value="app.app" />
    <add key="PYTHONPATH" value="D:\Scripts\WebApp" />
  </appSettings>
</configuration>
